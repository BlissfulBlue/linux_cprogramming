#include <iostream>

int main()
{
    //Print the "welcoming" messages to terminal
    std::cout << "Get what the warden wants and get home";
    std::cout << std::endl;
    std::cout << "To disable the alarm on the door:" << std::endl;

    //Declare 3 number code
    const int CodeA= 4;
    const int CodeB= 9;
    const int CodeC= 2;



    const int CodeSum= CodeA + CodeB + CodeC;
    const int CodeProduct= CodeA * CodeB * CodeC;

    // Print CodeSum and CodeProduct to the terminal
    std::cout << std::endl;
    std::cout << "- There are three numbers in the code" << std::endl;
    std::cout << "- The codes add up to: " << CodeSum << std::endl;
    std::cout << "- They multiply to: " << CodeProduct << std::endl;

    int GuessA, GuessB, GuessC;
    std::cin >> GuessA;
    std::cin >> GuessB;
    std::cin >> GuessC;
    
    
    int GuessSum= GuessA + GuessB + GuessC;
    int GuessProduct= GuessA * GuessB * GuessC;

    //Determines whether player input is right or wrong.
    if (GuessSum == CodeSum && GuessProduct == CodeProduct)
    {
        std::cout << "Lock Disabled";
    }

    else
    {
        std::cout << "ERROR: ALARM CHARGING. ALARM 25% ACTIVE";
    }

    return 0;
}
